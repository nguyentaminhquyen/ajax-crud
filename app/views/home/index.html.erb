<div class="row">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Description</th>
              <th>Author</th>
            </tr>
          </thead>
          <tbody id="myTable">
          	<%= @books.each do |book|  %>
                <tr>
	              <td><%= book.id%></td>
	              <td><%= book.name%></td>
	              <td><%= book.description%></td>
	              <td><%= book.author_name%></td>
                </tr>
			     <% end %>
          </tbody>
        </table>   
      </div>
	</div>
